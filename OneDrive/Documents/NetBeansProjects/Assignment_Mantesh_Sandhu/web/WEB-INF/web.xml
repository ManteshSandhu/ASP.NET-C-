<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
     <security-role>
      <role-name>cashier</role-name>
  </security-role>
    <security-role>
      <role-name>manager</role-name>
  </security-role>
   
  <security-constraint>
      <web-resource-collection>
          <web-resource-name>Edit</web-resource-name>
      <url-pattern>/EditBooks</url-pattern>
      <url-pattern>/EditBookHazel</url-pattern>
      <url-pattern>/EditBookTraf</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>manager</role-name>
      </auth-constraint>
  </security-constraint>
   <security-constraint>
      <web-resource-collection>
          <web-resource-name>delete</web-resource-name>
      <url-pattern>/DeleteBook</url-pattern>
      <url-pattern>/DeleteBookHazel</url-pattern>
      <url-pattern>/DeleteBookTraf</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>manager</role-name>
      </auth-constraint>
  </security-constraint>
  <security-constraint>
      <web-resource-collection>
          <web-resource-name>Search</web-resource-name>
      <url-pattern>/Search.html</url-pattern>
      <url-pattern>/SearchTraf.html</url-pattern>
      <url-pattern>/SearchHaz.html</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>manager</role-name>
          <role-name>cashier</role-name>
      </auth-constraint>
  </security-constraint>
  <security-constraint>
      <web-resource-collection>
          <web-resource-name>Purchase</web-resource-name>
      <url-pattern>/Purchase/*</url-pattern>
     
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>cashier</role-name>
      </auth-constraint>
  </security-constraint>
 <security-constraint>
      <web-resource-collection>
          <web-resource-name>View</web-resource-name>
      <url-pattern>/GetBook</url-pattern>
      <url-pattern>/GetBookTraf</url-pattern>
      <url-pattern>/GetBookHaz</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>manager</role-name>
          <role-name>cashier</role-name>
      </auth-constraint>
  </security-constraint>
 <!-- <login-config>
      <auth-method>FORM</auth-method>
      <form-login-config>
          <form-login-page>/login.jsp</form-login-page>
          <form-error-page>/error.html</form-error-page>
      </form-login-config>
  </login-config>-->
  <login-config>
      <auth-method>BASIC</auth-method>
      
  </login-config>
  <error-page>
        <error-code>403</error-code>
        <location>/notAuthorised.jsp</location>
         </error-page>
         <security-constraint>
      <web-resource-collection>
          <web-resource-name>add</web-resource-name>
      <url-pattern>/AddBook</url-pattern>
      <url-pattern>/AddBookHazel</url-pattern>
      <url-pattern>/AddBookTraf</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      </web-resource-collection>
      <auth-constraint>
          <role-name>manager</role-name>
      </auth-constraint>
  </security-constraint>
        
</web-app>
